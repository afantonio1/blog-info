<h4 class="titulo-pagina"> {{categoria.nome}}</h4>
<hr/>

{{#each postagens}}
<div class="card mt-4">

    <div class="card-body">
        <h4>{{titulo}}</h4>
        <hr/>
        <p class="para-post">{{descricao}}</p>
        <div class="boxBotoes">
            <a href="/postagem/{{slug}}"><button class="btn btn-info" title="Ler postagem completa">Leia mais</button></a>
        </div>
        <hr />
        <div>
            <small>Publicado em: {{#formatDate data}}{{/formatDate}}</small>
        </div>
    </div>
</div>
{{else}}
<div class="card mt-2">
    <div class="card-body">
        <p>Nenhuma postagem encontrada</p>
    </div>
</div>

{{/each}}